{
  "name": "@web-widget/standalone-web-widget-webpack-plugin",
  "version": "0.0.1-beta",
  "description": "A webpack plugin to run web-widget microfrontends as standalone",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/standalone-web-widget.js",
  "scripts": {
    "test": "jest",
    "build:types": "tsc",
    "prepublishOnly": "pnpm run build:types",
    "format": "prettier --write .",
    "lint": "eslint lib"
  },
  "types": "types/standalone-web-widget.d.ts",
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "eslint": "^7.17.0",
    "eslint-config-node-important-stuff": "^1.1.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "jest-serializer-html": "^7.0.0",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn lint"
    }
  },
  "peerDependencies": {
    "html-webpack-plugin": "^5.3.2",
    "webpack": "^5.51.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-widget/standalone-web-widget-webpack-plugin.git"
  },
  "keywords": [
    "webpack",
    "web-widget",
    "standalone"
  ],
  "author": "Joel Denning",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/web-widget/standalone-web-widget-webpack-plugin/issues"
  },
  "homepage": "https://github.com/web-widget/standalone-web-widget-webpack-plugin#readme",
  "engines": {
    "node": ">= 8.3.0"
  }
}
